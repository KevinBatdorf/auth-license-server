// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./auth.db"
}

model User {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @default(now())
    email     String    @unique
    name      String
    password  String
    // ADMIN, OWNER, MANAGER (think client managing the resource)
    role      String    @default("OWNER")
    // ACTIVE, INACTIVE, DELETED?
    status    String    @default("ACTIVE")
    sessions  Session[]
    licenses  License[]
    webhooks  Webhook[]
}

model Webhook {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    name      String
    token     String
    User      User     @relation(fields: [userId], references: [id])
    userId    Int
}

model License {
    id         Int      @id @default(autoincrement())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @default(now())
    validUntil DateTime
    productId  String
    seats      Int      @default(1)
    User       User     @relation(fields: [userId], references: [id])
    userId     Int
}

model Session {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    token     String?  @unique
    userAgent String?
    host      String?
    country   String?
    city      String?
    region    String?
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
}
